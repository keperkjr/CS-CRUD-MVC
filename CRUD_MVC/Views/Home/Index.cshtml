@model IEnumerable<CRUD_MVC.Models.Employee>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@await Component.InvokeAsync(nameof(CRUD_MVC.ViewComponents.EmployeeForm))

@if (Model != null)
{
    @await Component.InvokeAsync(nameof(CRUD_MVC.ViewComponents.EmployeeTable), new { employees = Model })
}
